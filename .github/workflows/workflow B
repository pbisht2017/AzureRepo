name: Workflow B
on:
  workflow_run:
    workflows: ["Workflow A"]
    types:
      - completed

jobs:
  pull-image:
    runs-on: ubuntu-latest

    steps:
      - name: Pull image from Docker Hub
        run: docker pull pbisht2017/prateek-nginx-image:latest

      - name: Run the image (option)
        run: |
          docker run -d --name nginx-test -p 8080:80 pbisht2017/prateek-nginx-image:latest
          sleep 5
          docker ps
